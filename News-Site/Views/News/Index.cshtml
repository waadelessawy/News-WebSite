@model IEnumerable<News_Site.Models.News>

@{
    ViewData["Title"] = "Manage News";
}

<h1>Manage News</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create News</a>
</p>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Operation
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewsTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>

                 <div>
                    <a style="margin-bottom: 2px;" class="btn btn-success" asp-action="Edit" asp-route-id="@item.NewsID">Edit</a> 
                    <a style="margin-bottom: 2px;" class="btn btn-primary"  asp-action="Details" asp-route-id="@item.NewsID">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.NewsID">Delete</a>
                </div>

                

            </td>
        </tr>
}
    </tbody>
</table>
